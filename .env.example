# Proxmox API
PVE_HOST=https://pve.example.org:8006    # Proxmox URL (include https:// and port)
PVE_PORT=8006
PVE_NODE=pve-node-name                   # Proxmox node name
PVE_TOKEN_ID=your@pve!tokenid            # API token id (user@realm!name)
PVE_TOKEN_SECRET=REPLACE_WITH_SECRET     # API token secret
VERIFY_TLS=0                             # 1 to verify TLS certs, 0 to skip

TEMPLATE_VMID=9000                       # VMID of the prepared template

# Cloud-init ISO storage on Proxmox
ISO_STORAGE=local
ISO_DIR=/var/lib/vz/template/iso

# Lab network / bridges
BR_CTF=vmbr10                            # Bridge used for CTF internal network
EXT_BRIDGE=vmbr0                         # External bridge (optional)
EXT_VLAN=57                              # Optional VLAN tag for external bridge (blank = none)
EXT_GW_IP=10.0.57.2/24                   # External IP on net1 (optional)
EXT_GW_GATEWAY=10.0.57.1                 # External gateway IP (optional)

# DNS servers (comma-separated)
DNS_SERVERS=1.1.1.1,8.8.8.8

# VM IDs (adjust to avoid collisions)
VMID_GW=700
VMID_FORCAD=710
VMID_TEAM_BASE=720
TEMPLATE_VMID=9000

# Lab sizing and counts
N_TEAMS=4
TEAM_CORES=2
TEAM_RAM_MB=4096
GW_CORES=2
GW_RAM_MB=1024
FORCAD_CORES=2
FORCAD_RAM_MB=4096

# Control flags
ALLOW_ROOT_SSH=1     # 1 to allow password SSH for root on team VMs
POOL_ID=ctf
CLONE_FULL=0         # 1 = full clone, 0 = linked clone (depends on template/storage)

# IP plan (point-to-point /31 links)
FORCAD_IP=10.10.10.10/31
FORCAD_GW_SIDE=10.10.10.11/31
WG_GW_IP=10.10.10.1

# WireGuard / FRP
WG_PORT=51820
WG_ENDPOINT=                    # Public endpoint host:port (optional)
FRP_ENABLED=0
FRP_SERVER=
FRP_PORT=7000
FRP_VER=0.52.3

# MAC address seeds (optional â€” used to generate stable MACs)
MAC_GW_NET0=02:00:00:02:BC:00
MAC_GW_NET1=02:00:00:02:BC:01
MAC_FORCAD_NET0=02:00:00:02:C6:00
MAC_TEAM_BASE=02:00:00:02:D0

# Storage / misc
ISO_STORAGE=local